    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const myId = parseInt("<%= user.id %>");
        const myName = "<%= user.name %>";
        let currentRoomId = null;

        // ì‹œê°„ í¬ë§· í•¨ìˆ˜ (ì˜¤í›„ 2:30 í˜•íƒœ)
        function formatTime(dateString) {
            if (!dateString) return '';
            const date = new Date(dateString);
            return date.toLocaleTimeString('ko-KR', { hour: '2-digit', minute: '2-digit' });
        }

        async function joinRoom(roomId) {
            if (currentRoomId === roomId) return;

            if (currentRoomId) {
                socket.emit('leave room', { roomId: currentRoomId, name: myName });
                document.getElementById(`room-${currentRoomId}`).classList.remove('active');
            }

            currentRoomId = roomId;

            document.getElementById(`room-${roomId}`).classList.add('active');
            document.getElementById('empty-state').style.display = 'none';
            document.getElementById('chat-content').style.display = 'flex';

            const badge = document.getElementById(`badge-${roomId}`);
            if (badge) badge.style.display = 'none';
            fetch(`/chat/api/read/${roomId}`, { method: 'POST' });

            const response = await fetch(`/chat/api/${roomId}`);
            const data = await response.json();

            document.getElementById('current-room-title').innerText = data.room.title;
            const msgList = document.getElementById('messages');
            msgList.innerHTML = '';

            data.messages.forEach(msg => {
                addMessageToScreen(msg.name, msg.content, msg.user_id === myId, msg.created_at);
            });

            socket.emit('join room', { roomId: roomId, name: myName });
            scrollToBottom();
        }

        document.getElementById('chat-form').addEventListener('submit', (e) => {
            e.preventDefault();
            const input = document.getElementById('input');
            if (input.value.trim() && currentRoomId) {
                socket.emit('chat message', {
                    roomId: currentRoomId,
                    name: myName,
                    text: input.value,
                    userId: myId
                });
                input.value = '';
                input.focus();
            }
        });
        socket.on('chat message', (data) => {
            const roomItem = document.getElementById(`room-${data.roomId}`);
            const incomingRoomId = String(data.roomId);
            const activeRoomId = String(currentRoomId);

            if (roomItem) {
                roomItem.querySelector('.room-desc').innerText = data.text;
                roomItem.querySelector('.room-time').innerText = 'ë°©ê¸ˆ';

                const ul = document.querySelector('.room-list');
                ul.prepend(roomItem);
            }

            if (incomingRoomId === activeRoomId) {
                const time = data.time || new Date();
                addMessageToScreen(data.name, data.text, data.user_id === myId, time);
                scrollToBottom();

                fetch(`/chat/api/read/${incomingRoomId}`, { method: 'POST' });
            }

            else {
                const badge = document.getElementById(`badge-${incomingRoomId}`);
                if (badge) {
                    let count = parseInt(badge.innerText) || 0;
                    badge.innerText = count + 1;
                    badge.style.display = 'inline-block';
                    badge.style.backgroundColor = '#ff3b30';
                }
            }
        });

        async function createRoom(e) {
            e.preventDefault();
            const input = document.getElementById('new-room-title');
            const title = input.value;
            if (!title) return;

            const res = await fetch('/chat/create', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ title })
            });
            const data = await res.json();
            if (data.success) {
                input.value = '';
                joinRoom(data.roomId);
            }
        }

        socket.on('new_room', (room) => {
            const ul = document.querySelector('.room-list');
            const li = document.createElement('li');
            li.className = 'room-item';
            li.id = `room-${room.id}`;
            li.setAttribute('onclick', `joinRoom('${room.id}')`);

            li.innerHTML = `
            <div class="room-icon"><i class="fa-solid fa-comments"></i></div>
            <div class="room-info">
                <div class="room-top">
                    <span class="room-title">${room.title}</span>
                    <span class="room-time">ë°©ê¸ˆ</span>
                </div>
                <div class="room-bottom">
                    <span class="room-desc">ìƒˆë¡œìš´ ëŒ€í™”ë°©</span>
                    <span class="unread-badge" id="badge-${room.id}" style="display:none;">0</span>
                </div>
            </div>
        `;
            ul.prepend(li);
        });

        // [ìˆ˜ì •ë¨] í™”ë©´ì— ê·¸ë¦¬ëŠ” í•¨ìˆ˜ (ì‹œê°„ ì¶”ê°€)
        function addMessageToScreen(name, text, isMe, time) {
            const ul = document.getElementById('messages');
            const li = document.createElement('li');
            li.className = 'msg-line ' + (isMe ? 'my-msg' : 'other-msg');

            const timeStr = formatTime(time);

            // HTML êµ¬ì¡° í†µì¼: [ë§í’ì„ ] ë‹¤ìŒì— [ì‹œê°„]ì„ ë„£ìŒ
            // CSSì—ì„œ .my-msgëŠ” flex-direction: row-reverseë¡œ ì¸í•´ [ì‹œê°„][ë§í’ì„ ]ìœ¼ë¡œ ë³´ì„
            li.innerHTML = `
            ${!isMe ? `<div class="msg-sender">${name}</div>` : ''}
            <div class="msg-content-wrapper">
                <div class="msg-box">${text}</div>
                <div class="msg-timestamp">${timeStr}</div>
            </div>
        `;
            ul.appendChild(li);
